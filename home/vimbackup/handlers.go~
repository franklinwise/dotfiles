package main
import (
"net/http"
"encoding/json"
"github.com/cihub/seelog"
)
type Handlers struct {}
func (Handlers) SlowChangingDataHandler(w http.ResponseWriter, r *http.Request) {
pong := &Pong { Message: "pong"}
message, _ := json.Marshal(pong)
w.Write([]byte(message))
seelog.Info("Ping Received")
}
type Pong struct {
Message string `json:"message"`
}
func (Handlers) PingHandler(w http.ResponseWriter, r *http.Request) {
pong := &Pong { Message: "pong"}
message, _ := json.Marshal(pong)
w.Write([]byte(message))
seelog.Info("Ping Received")
}
